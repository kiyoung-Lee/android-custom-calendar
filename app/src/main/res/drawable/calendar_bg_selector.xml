<selector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

  <item app:tsquare_state_range_middle="true">
    <color android:color="@color/color_ffd1d1"/>
  </item>

  <item app:tsquare_state_range_first="true" android:drawable="@drawable/bg_circle_selected_start"/>
  <item app:tsquare_state_range_last="true" android:drawable="@drawable/bg_circle_selected_end"/>

  <item android:state_selected="true" android:drawable="@drawable/bg_circle_selected"/>
  <item android:state_pressed="true" android:drawable="@drawable/bg_circle_selected"/>

  <item app:tsquare_state_current_month="false">
    <color android:color="@color/calendar_bg"/>
  </item>
  <item app:tsquare_state_highlighted="true">
    <color android:color="@color/calendar_highlighted_day_bg"/>
  </item>
  <item app:tsquare_state_today="true">
    <color android:color="@color/calendar_text_active"/>
  </item>
  <item>
    <color android:color="@color/calendar_bg"/>
  </item>
</selector>
