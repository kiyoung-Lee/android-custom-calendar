<?xml version="1.0" encoding="utf-8"?>

<com.example.luke.customcalendar.calendar.MonthView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

  <!-- This is the place where the month title is added -->

  <com.example.luke.customcalendar.calendar.CalendarGridView
      android:id="@+id/calendar_grid"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <com.example.luke.customcalendar.calendar.CalendarRowView
        android:id="@+id/day_names_header_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/calendar_day_headers_paddingbottom">

      <TextView
          style="@style/CalendarCell.DayHeader"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

      <TextView
          style="@style/CalendarCell.DayHeader"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

      <TextView
          style="@style/CalendarCell.DayHeader"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

      <TextView
          style="@style/CalendarCell.DayHeader"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

      <TextView
          style="@style/CalendarCell.DayHeader"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

      <TextView
          style="@style/CalendarCell.DayHeader"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

      <TextView
          style="@style/CalendarCell.DayHeader"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
    </com.example.luke.customcalendar.calendar.CalendarRowView>

    <include layout="@layout/week" />

    <include layout="@layout/week" />

    <include layout="@layout/week" />

    <include layout="@layout/week" />

    <include layout="@layout/week" />

    <include layout="@layout/week" />
  </com.example.luke.customcalendar.calendar.CalendarGridView>
</com.example.luke.customcalendar.calendar.MonthView>
